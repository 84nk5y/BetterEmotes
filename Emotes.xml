<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Script file="Emotes.lua"/>

    <Button name="EmoteGridButtonTemplate" virtual="true">
        <Size x="32" y="32"/>
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon" setAllPoints="true"/>
            </Layer>
        </Layers>
        <HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
    </Button>

    <Button name="EmotesMainButton" parent="UIParent" mixin="EmotesButtonMixin">
        <Size x="28" y="28"/>
        <Anchors>
            <Anchor point="LEFT" relativeTo="QuickJoinToastButton" relativePoint="RIGHT" x="2" y="0"/>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon" setAllPoints="true"/>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEvent method="OnEvent"/>
            <OnEnter method="OnEnter"/>
            <OnLeave method="OnLeave"/>
        </Scripts>
        <Frames>
            <Frame parentKey="Grid" hidden="true">
                <Size x="152" y="152"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" x="0" y="10"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture setAllPoints="true">
                            <Color r="0" g="0" b="0" a="0.85"/>
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnEnter>
                        local p = self:GetParent();
                        if p.hideTimer then p.hideTimer:Cancel() end
                    </OnEnter>
                    <OnLeave>
                        self:GetParent():OnLeave();
                    </OnLeave>
                </Scripts>
            </Frame>
        </Frames>
    </Button>
</Ui>